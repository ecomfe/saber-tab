@import "archer"

// 盒模型计算模式
// type border-box | content-box
box-sizing(type = border-box)
    -webkit-box-sizing: type
    box-sizing: type

// 圆角
border-radius()
    -webkit-border-radius: arguments
    border-radius: arguments




.state-hidden
    display: none !important

// 默认边框
$ui_tab_border = 1px solid #dedede

.ui-tab
    -webkit-user-select: none;

.ui-tab-scroller
    .ui-tab-navigator
        display: table
        table-layout: fixed
    .ui-tab-item
        display: table-cell


.ui-tab-navigator
    display: -webkit-box
    margin: 0
    padding: 0
    // width: 100%
    white-space: nowrap
    list-style: none
    background: #2773dc
    color: #fff

    .ui-tab-item
        // display: list-item
        padding: .5rem .8rem

        cursor: pointer
        text-align: center;
        white-space: nowrap

        -webkit-box-flex: 1
        box-flex: 1

        box-sizing(content-box)

    .ui-tab-item-active
        cursor: default
        background: #0c4da8

// 横向
.ui-tab-horizontal
    //

    .ui-tab-navigator
        //

    .ui-tab-item
        //

// 纵向
.ui-tab-vertical
    height: 100%

    .ui-tab-navigator
        display: block

    .ui-tab-item
        display: block

// 禁用
.ui-tab-disabled
    .ui-tab-navigator
        opacity: .3;
    .ui-tab-item
        cursor: default;
